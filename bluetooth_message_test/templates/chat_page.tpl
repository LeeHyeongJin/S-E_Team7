<div id="chat" class="ui-page" data-url="#chat">
    <div id="chat-header" class="ui-header" data-position="fixed">
        <h1>
            <span id="chat-header-type"></span>
            <span id="chat-header-name"></span>
        </h1>
    </div>

    <div id="chat-content" class="ui-content">
        <ul class="ui-listview"></ul>
    </div>

    <div id="chat-footer" class="ui-footer" data-position="fixed">
        <div id="ui-textArea">
            <div id="ui-textArea-text">
                <textarea
                    id="text"
                    placeholder="Your message"
                    data-role="none"></textarea>
            </div>
            <div id="ui-textArea-button">
                <button data-inline="true" id="ui-mySend">Send</button>
            </div>
        </div>
    </div>
</div>
